    <title>Inventurliste</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        header {
            background-color: #333;
            color: #fff;
            padding: 10px 0;
            text-align: center;
        }

        h1 {
            margin: 0;
        }

        .container {
            width: 80%;
            margin: 20px auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border: 1px solid #ddd;
        }

        th {
            background-color: #333;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #ddd;
        }

        .form-container {
            margin-bottom: 20px;
        }

        input, button {
            padding: 10px;
            margin: 5px;
            font-size: 16px;
        }

        input[type="text"], input[type="number"] {
            width: 200px;
        }

        button {
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
        }

        button:hover {
            background-color: #45a049;
        }

        .total-value {
            font-size: 18px;
            font-weight: bold;
            margin-top: 20px;
        }

        .reduce-button {
            background-color: #f44336;
        }

        .reduce-button:hover {
            background-color: #e53935;
        }

        .delete-button {
            background-color: #FF5722;
        }

        .delete-button:hover {
            background-color: #e64a19;
        }

        .add-button {
            background-color: #2196F3;
        }

        .add-button:hover {
            background-color: #1976D2;
        }
    </style>
